.weather-box
	label
		input#switch-night(type="checkbox")
		.box-top
			svg#bigmoon(viewbox="-50 -70 100 100")
				circle.moon1(cx=0, cy=0, r=30)
				circle.meyes(cx=10, cy=-5, r=6)
				circle.meyes(cx=-13, cy=-5, r=6)
				circle.block(cx=10, cy=-10, r=9)
				circle.block(cx=-13, cy=-10, r=9)
				ellipse.mouth(cx=-1, cy=16, rx=8, ry=4)
				circle.mouthup(cx=-1, cy=10, r=9)
				circle.blush(cx=20, cy=10, r=4)
				circle.blush(cx=-20, cy=10, r=4)
				text.z1(x=18, y=-33) Z
				text.z2(x=10, y=-20) Z
				text.z3(x=5, y=-9) Z
			svg#bigsun(viewbox="-50 -50 100 100")
				circle.back(cx=0, cy=0, r=25)
					animateTransform(
						attributeName="transform",
						type="rotate",
						dur="5s",
						values="0;360",
						repeatCount="indefinite"
					)
				circle.font(cx=0, cy=0, r=25)
				circle.eyes(cx=7, cy=-5, r=3)
				circle.eyes(cx=-10, cy=-5, r=3)
				circle.glass(cx=7, cy=-5, r=6)
				circle.glass(cx=-10, cy=-5, r=6)
				line.rim(x1=-8, y1=-5, x2=5, y2=-5)
				ellipse.mouth(cx=-1, cy=16, rx=8, ry=4)
				circle.mouthup(cx=-1, cy=11, r=5)

			svg.temsvg
				circle(cx=0, cy=100, r=3)
				text(x=0, y=100) 24°C
				circle(cx=70, cy=80, r=3)
				text(x=70, y=80) 26°C
				circle(cx=140, cy=60, r=3)
				text(x=140, y=60) 29°C
				circle(cx=210, cy=70, r=3)
				text(x=210, y=70) 27°C
				circle(cx=280, cy=100, r=3)
				text(x=280, y=100) 24°C
				circle(cx=350, cy=110, r=3)
				text(x=350, y=110) 22°C
				circle(cx=420, cy=130, r=3)
				text(x=420, y=130) 21°C
				circle(cx=490, cy=100, r=3)
				text(x=490, y=100) 21°C
				circle(cx=560, cy=560, r=3)
				text(x=560, y=560) 21°C
				polyline(
					points="1,100 70,80 140,60 210,70 280,100 350,110 420,130 490,100 560,560"
				)
				svg.mountain
					rect(x=0, y=100, width=400, height=30)
					ellipse.m1(cx=110, cy=70, rx=180, ry=60)
					ellipse.m2(cx=280, cy=90, rx=180, ry=40)
			.text-area 
				.temperature 24°C
				.address 南投縣鹿谷鄉
				.date 星期六 上午10:34

		.box-bottom
			.dayweather
				h3 Mon
				svg(viewbox="-50 -50 100 100")
					circle.sun(cx=0, cy=0, r=22)
			.dayweather
				h3 Tue
				svg(viewbox="-50 -50 100 100")
					circle.sun(cx=0, cy=0, r=22)
			.dayweather
				h3 Wed
				svg(viewbox="-50 -50 100 100")
					circle.sun(cx=0, cy=0, r=22)
			.dayweather
				h3 Thu
				svg(viewbox="-50 -50 100 100")
					circle.sun(cx=0, cy=0, r=22)
					circle.cloud(cx=0, cy=30, r=20)
					circle.cloud(cx=-15, cy=30, r=20)
					circle.cloud(cx=-30, cy=30, r=20)
					circle.cloud(cx=-25, cy=10, r=15)
					circle.cloud(cx=-7, cy=15, r=15)
			.dayweather
				h3 Fri
				svg(viewbox="-50 -50 100 100")
					circle.sun(cx=0, cy=0, r=22)
					circle.cloud(cx=0, cy=30, r=20)
					circle.cloud(cx=-15, cy=30, r=20)
					circle.cloud(cx=-30, cy=30, r=20)
					circle.cloud(cx=-25, cy=10, r=15)
					circle.cloud(cx=-7, cy=15, r=15)
			.dayweather
				h3 Sat
				svg(viewbox="-63 -30 100 100")
					circle.cloud(cx=0, cy=30, r=20)
					circle.cloud(cx=-15, cy=30, r=20)
					circle.cloud(cx=-30, cy=30, r=20)
